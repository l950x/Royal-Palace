{% extends 'base.html.twig' %}

{% block title %}Hello ProfileController!
{% endblock %}

{% block body %}
	<div class="menu">
    <h2>Mes réservations :</h2>

    {% for i, reservation in reservations %}
        <div class="reservation-item">
            Chambre numéro: {{ reservation.chambre.id }}<br>
            Entrée: {{ dateEntree[i] }}<br>
            Sortie: {{ dateSortie[i] }}<br>
            Prix: {{ reservation.prix }}<br>
		</div>


            <a class="btn" href="{{ path('app_profile_reservations_edit', {'id': reservation.id}) }}">Modifier ma réservation</a>
        
    {% endfor %}
</div>

	<style>
	.menu{
    display:flex;
    flex-direction:column;
    justify-content:center;
    margin-top:100px;
    background-color:#D9D9D9;
    margin-left:400px;
    margin-right:400px;
    padding-bottom:50px;
    border-radius:15px;
    border: goldenrod solid;
    margin-bottom:200px;
}

.menu h2 {
        font-size: 20px;
        margin-bottom: 10px;
		font-family:verdana;
		text-align:center;
    }

.reservation-item {
        margin-bottom: 20px;
        padding: 10px;
        border: 1px solid #ddd;
		font-family:verdana;
        border-radius: 5px;
		text-align:center;
    }


.btn {
	background-color:#002890;
	color: white;
	border:solid goldenrod;
	width:200px;
	text-align:center;
	height: 30px;
	border-radius:10px;
	margin-top:15px;
	margin-left:225px;
	margin-bottom:15px;
	transition: background-color 0.2s, color 0.1s;
	font-family:verdana;
	font-size:14px;
}

.btn:hover {
  background-color: #2980b9;
}

body{
    background-image: url('/images/14848683028_4727ac7e6c_b.jpg');
	background-size: cover;
	background-repeat: no-repeat;
}

	</style>
{% endblock %}

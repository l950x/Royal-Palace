{% extends 'base.html.twig' %}

{% block title %}Chambre index
{% endblock %}

{% block body %}
<div class="formu">
	<h1>Chambre index</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Superficie</th>
				<th>ChaineALaCarte</th>
				<th>Tarif</th>
				<th>VueSurMer</th>
				<th>Climatisation</th>
				<th>TelevisionEcranPlat</th>
				<th>Telephone</th>
				<th>ChaineSatellite</th>
				<th>ChaineDuCable</th>
				<th>CoffreFort</th>
				<th>MaterielDeRepassage</th>
				<th>WifiGratuit</th>
				<th>Type:</th>
			</tr>
		</thead>
		<tbody>
			{% for chambre in chambres %}
				<tr>
					<td>{{ chambre.id }}</td>
					<td>{{ chambre.Superficie }}</td>
					<td>{{ chambre.ChaineALaCarte }}</td>
					<td>{{ chambre.Tarif }}</td>
					<td>{{ chambre.VueSurMer }}</td>
					<td>{{ chambre.Climatisation }}</td>
					<td>{{ chambre.TelevisionEcranPlat }}</td>
					<td>{{ chambre.Telephone }}</td>
					<td>{{ chambre.ChaineSatellite }}</td>
					<td>{{ chambre.ChaineDuCable }}</td>
					<td>{{ chambre.CoffreFort }}</td>
					<td>{{ chambre.MaterielDeRepassage }}</td>
					<td>{{ chambre.WifiGratuit }}</td>
					<td>{{ chambre.Type }}</td>
					<td>
						<div class="ananas">
						<a class="pomme" href="{{ path('app_admin_chambre_show', {'id': chambre.id}) }}">Voir</a>
						</br>
						<a class="pomme" href="{{ path('app_admin_chambre_edit', {'id': chambre.id}) }}">Modifier</a>
						</div>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="17">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
	<hr/>
	{{ form_start(form) }}
	{{ form_end(form) }}
	<hr/>

	<div class="banane">
	<a class="poire" href="{{ path('app_admin_chambre_new') }}">Créer nouveau</a>
	<br/>
	<a class="poire" href={{path('app_admin')}}>Retour</a>
	</div>
</div>
<style>
